<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>consumer</servlet-name>
        <servlet-class>ph.pup.itech.group12.controller.consumer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>ph.pup.itech.group12.controller.admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/about-us</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/contact-us</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/partners</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/shop/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>/shopping-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/dashboard/inventory</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
